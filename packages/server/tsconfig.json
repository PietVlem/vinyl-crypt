{ 
  "compilerOptions": { 
    "target": "es6", 
    "module": "commonjs", 
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist", 
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true
  }, 
  "include": ["src/**/*.ts"]
} 